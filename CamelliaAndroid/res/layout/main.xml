<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/purple_gradient" android:id="@layout/main">

	<include android:id="@+id/header_row" layout="@layout/header_row" />

	<EditText android:layout_width="match_parent" android:id="@+id/name_input" android:inputType="textPersonName" android:layout_height="50dp" android:singleLine="true"
		android:autoText="true" android:hint="Who First name, Surname" android:background="@drawable/rounded_input" android:paddingLeft="20dip" android:layout_marginTop="10dip"
		android:layout_marginLeft="20dip" android:layout_marginRight="20dip">
		<requestFocus></requestFocus>
	</EditText>

	<EditText android:layout_width="match_parent" android:id="@+id/address_input" android:inputType="textPostalAddress" android:layout_height="50dp" android:singleLine="true"
		android:hint="Where  Suburb, city state" android:background="@drawable/rounded_input" android:paddingLeft="20dip" android:layout_marginTop="10dip" android:layout_marginLeft="20dip"
		android:layout_marginRight="20dip"></EditText>

	<RelativeLayout android:layout_width="match_parent" android:id="@+id/relativeLayout2" android:layout_height="wrap_content">
		<ImageButton android:src="@drawable/search" android:id="@+id/search" android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignParentRight="true" android:background="@drawable/purple_gradient"></ImageButton>
	</RelativeLayout>

	<ImageView android:src="@drawable/are_you_new_to_hi" android:layout_width="wrap_content" android:layout_height="200dp" android:background="@color/are_you_new_to_hi_purple"
		android:id="@+id/are_you_new_to_hi_image"></ImageView>

	<RelativeLayout android:layout_width="match_parent" android:id="@+id/relativeLayout3" android:layout_height="match_parent" android:background="@color/light_purple">
		<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/green_gradient_rounded_edges" android:textColor="@color/white"
			android:id="@+id/create_profile" android:text="Create a free profile" android:layout_centerHorizontal="true" android:drawableLeft="@drawable/create_profile_icon"
			android:layout_centerVertical="true">
		</Button>
	</RelativeLayout>
</LinearLayout>
 